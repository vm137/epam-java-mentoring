<?xml version="1.0" encoding="UTF-8"?>

<beans
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns="http://www.springframework.org/schema/beans"
  xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd">

  <bean class="org.springframework.context.support.PropertySourcesPlaceholderConfigurer">
    <property name="locations" value="classpath:application.properties"/>
  </bean>

  <bean class="com.epam.tickets.storage.CommonStorage" id="commonStorage" init-method="initStorage">
    <property name="initialStorageFilePath" value="${storage.path}"/>
  </bean>

  <bean class="com.epam.tickets.facade.BookingFacadeImpl" id="facade">
    <constructor-arg ref="userDao"/>
    <constructor-arg ref="eventDao"/>
    <constructor-arg ref="userService"/>
    <constructor-arg ref="eventService"/>
  </bean>

  <bean class="com.epam.tickets.model.dao.UserDao" id="userDao">
    <constructor-arg ref="commonStorage"/>
  </bean>

  <bean class="com.epam.tickets.model.dao.EventDao" id="eventDao">
    <constructor-arg ref="commonStorage"/>
  </bean>

  <bean class="com.epam.tickets.model.dao.TicketDao" id="ticketDao">
    <constructor-arg ref="commonStorage"/>
  </bean>

  <bean autowire="byType" class="com.epam.tickets.services.UserService" id="userService"/>

  <bean autowire="byType" class="com.epam.tickets.services.EventService" id="eventService"/>

  <bean autowire="byType" class="com.epam.tickets.services.TicketService" id="ticketService"/>

</beans>
